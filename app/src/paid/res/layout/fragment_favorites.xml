<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_favs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_error_message_fav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/error_message_text_size"
            android:text="@string/error_message"
            android:textAlignment="center"
            android:visibility="invisible"/>

        <ProgressBar
            android:id="@+id/pb_loading_bar_fav"
            android:layout_width="@dimen/pb_dimen"
            android:layout_height="@dimen/pb_dimen"
            android:layout_gravity="center"
            android:visibility="invisible">
        </ProgressBar>
    </FrameLayout>
</RelativeLayout>